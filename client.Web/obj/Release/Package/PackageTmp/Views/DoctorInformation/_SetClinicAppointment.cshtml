    function containsObject(obj, list) {
        var i;
        for (i = 0; i < list.length; i++) {
            //alert('list[i].start === obj.start && list[i].end === obj.end  ' + list[i].start + ' '+ obj.start + '  '+ list[i].end+ '  '+ obj.end);
            if (list[i].start === obj.start && list[i].end === obj.end) {
                return true;
            }
        }
        return false;
