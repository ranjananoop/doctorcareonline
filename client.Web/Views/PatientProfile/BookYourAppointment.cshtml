 }

        var frameHeight = $('.frameContent').height();
        var formHeight = $('form').height();
        $('.middleColumnContent').height(frameHeight - 400 );
        if ($("#tabvalue").val() != null) {
            tab($("#tabvalue").val())
        }
        $("#textContainers > p").html("");

