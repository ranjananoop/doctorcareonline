@model client.Web.Models.ForgotPassword

@{
    ViewBag.Title = "ForgotPassword";
}




<div class="login">

    <div class="c_pgTitle">
        <div class="c_pgTitle_Fleet">
            <h1>Forgot Password</h1>
        </div>
    </div>

    <div class="c_column_two">
       

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @using (Html.BeginForm())
        {
           
           
            <div class="forgot_pass_content" style="background-color: #e8f0f7;width: 301px;padding-bottom: 32px;">
                <div class="signupForm">

                    <h4>Account Information</h4>


                    <div class="row">
                        <div class="left">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.SECURITYQESTID1)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.SECURITYQESTID1, new[] {
                                new SelectListItem(){Text = "What was your childhood nickname?" ,Value="1" },
                                new SelectListItem(){Text ="What is the name of your favorite childhood friend?", Value ="2" },
                                new SelectListItem(){Text ="In what city or town was your first job?", Value ="3" },
                                new SelectListItem(){Text ="What is your favorite pet name?", Value ="4" },
                                new SelectListItem(){Text ="What is your mother's maiden name?", Value ="5" }
                            }, "Select")
                                @Html.ValidationMessageFor(model => model.SECURITYQESTID1)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="left">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.ANSWER1)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.ANSWER1)
                                @Html.ValidationMessageFor(model => model.ANSWER1)
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="left">
                            <div class="editor-label">
                                @Html.LabelFor(m => m.UserName)
                            </div>

                            <div class="row">
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.UserName)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="buttonsWrapper">
                        <input type="submit" value="Submit" class="button" />
                        <a class="button cancel" href="~/Home/Index">Cancel</a>
                    </div>
                </div>
                 @Html.ValidationSummary(true)
            </div>
        
        
        }
    </div>
    <div class="c_column_one">
         <div class="forgotPasswordMessage">
            <h3>Use the form to get your password. 
            </h3>
            <span>Email-ID Should be correct to send you the new password in your Email-ID
            </span>
        </div>

        <img src="~/Content/Images/amy_home.png" />
    </div>

</div>

<script>
    $(document).ready(function () {
        $("#SECURITYQESTID1").kendoDropDownList();

    });

    signupForm

</script>
<style>
    .validation-summary-errors {
    margin-left:10px;
    }
</style>
