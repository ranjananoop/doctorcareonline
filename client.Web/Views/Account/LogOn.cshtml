@model client.Web.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {



        var header_footer = $('header').height() + $('footer').height();
        var bodyHeight = $(document).height() - header_footer;
        $('.c_body').height(bodyHeight);


        $('.login_Header').appendTo('.login');
        $('fieldset').insertAfter('.login_Header');
        // $('.validation-summary-errors').insertAfter('fieldset');
        $('.validation-summary-errors').insertAfter('.row-group');
        $('.login').closest('#body').css('background-color', 'transparent');

    });
</script>
<div class="c_pgTitle">
            <div class="c_pgTitle_Fleet">
                <h1>Login to docare</h1>
            </div>
        </div>


@using (Html.BeginForm())
{
     @Html.ValidationSummary(true)
    <div class="login_left">
        <div class="amy_login"></div>
        <div class="amy_login_desc">
            <h2>Lorem Ipsum Lorem</h2>
            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum has been the industry's </p>
        </div>
    </div>
    <div class="login_right">
        <div class="loginBox">
            <h1>Log In</h1>
            <div class="row-group">
                <div class="row">
                    <div class="editor-label" style="margin-bottom: 8px !important;">
                        User Name
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "textbox" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="editor-label">
                        <b>@Html.LabelFor(m => m.Password)</b>
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(m => m.Password, new { @class = "textbox" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="right">
                        @Html.ActionLink("Forgot Password", "ForgotPassword")
                        <input type="submit" value="Log On" class="button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
   
  
    
}

